{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release ${version}",
    "commit": true,
    "tag": true,
    "push": true,
    "requireCleanWorkingDir": true,
    "requireUpstream": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "assets": [".output/*.zip"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": ["pnpm build", "pnpm zip"]
  }
}
